<div>
  <label for="{{name}}" class="block text-sm/6 font-medium text-gray-900">
    {{#if label}}{{label}}{{else}}{{name}}{{/if}}
    {{#if required}}<span class="text-red-500 ml-1">*</span>{{/if}}
  </label>
  <div class="mt-2 relative">
    <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
        <input 
            id="{{name}}" 
            type="password" 
            name="{{name}}" 
            value="{{value}}" 
            {{#if required}}required{{/if}}
            
            class="block min-w-0 grow bg-white py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"
            />
    </div>

    <span class="absolute inset-y-0 right-3 flex items-center cursor-pointer text-gray-500 toggle-password" data-target="{{name}}">
      👁
    </span>
  </div>
</div>
<script>
  $(document).ready(function() {
    const span = $(".toggle-password[data-target='{{name}}']");
    const input = $("#{{name}}");

    if (span.length && input.length) {
      span.on('click', function() {
        const type = input.attr('type');
        input.attr('type', type === 'password' ? 'text' : 'password');
      });
    }
  });
</script>