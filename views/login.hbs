<div class="flex w-full h-screen justify-center">
    <div class="flex min-h-full flex-col justify-center sm:px-6 py-12 lg:px-8 max-w-3xl w-full">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-gray-900">Sign in to your account</h2>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-lg">
            <div class="space-y-6 shadow-sm sm:p-12 py-12 px-3 sm:rounded-lg border border-white border-solid bg-white">
                {{> inputText name="username" label="Username" required=true}}
                {{> inputPassword name="password" label="Password" required=true}}

                <div>
                    <button onclick="handleLogin()" class="flex w-full justify-center bg-indigo-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500">Sign in</button>
                </div>
            </div>

            <p class="mt-10 text-center text-sm/6 text-gray-500">
                Not have an account?
                <a href="/register" class="font-semibold text-indigo-600 hover:text-indigo-500"> Register new account</a>
            </p>
        </div>
    </div>
</div>
<script>
    function handleLogin() {
        const username = $('#username').val();
        const password = $('#password').val();
        showLoading();
        $.ajax({
            url: '/api/auth/login',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ username, password }),
            success: function(res) {
                hideLoading();
                window.location.href = '/home';
            },
            error: function(err) {
                hideLoading();
                showPopup("Error", err.responseJSON?.message ?? err.statusText);
            }
        });
    }
</script>