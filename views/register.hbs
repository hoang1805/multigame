<div class="flex w-full h-screen justify-center">
    <div class="flex min-h-full flex-col sm:px-6 lg:px-8 max-w-3xl w-full">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-gray-900">Register your account</h2>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-lg">
            <div class="space-y-6 shadow-sm sm:p-12 py-12 px-3 sm:rounded-lg border border-white border-solid bg-white">
                {{> inputText name="username" label="Username" required=true}}
                {{> inputText name="email" label="Email" required=true type="email"}}

                {{> inputText name="nickname" label="Display name"}}

                {{> inputPassword name="password" label="Password" required=true}}
                {{> inputPassword name="rePassword" label="Repeat password" required=true}}

                <div>
                    <button onclick="handleRegister()" class="flex w-full justify-center bg-indigo-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500">Register</button>
                </div>
            </div>

            <p class="mt-10 text-center text-sm/6 text-gray-500">
                Have an account?
                <a href="/login" class="font-semibold text-indigo-600 hover:text-indigo-500"> Login here</a>
            </p>
        </div>
    </div>
</div>
<script>
    function handleRegister() {
        const username = $('#username').val();
        const email = $('#email').val();
        const nickname = $('#nickname').val();
        const password = $('#password').val();
        const rePassword = $('#rePassword').val();
        showLoading();
        $.ajax({
            url: '/api/auth/register',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ username, email, nickname, password, rePassword }),
            success: function(res) {
                hideLoading();
                showPopup("Info", "Register successfully");
                window.location.href = '/login';
            },
            error: function(err) {
                hideLoading();
                showPopup("Error", err.responseJSON?.message ?? err.statusText);
            }
        });
    }
</script>